{
  "id": "taskflow",
  "name": "TaskFlow",
  "description": "Gestión de tareas simple para equipos",
  "vpu": "Organiza tu equipo en minutos",
  "target_audience": "Pequeños equipos y freelancers",
  "pricing": "€29/mes",
  
  "public_page": {
    "enabled": true,
    "type": "booking"
  },
  
  "database": {
    "new_tables": [
      {
        "name": "tasks",
        "columns": [
          "id UUID PRIMARY KEY DEFAULT gen_random_uuid()",
          "organization_id TEXT NOT NULL",
          "title TEXT NOT NULL",
          "description TEXT",
          "status TEXT NOT NULL DEFAULT 'pending' CHECK (status IN ('pending', 'in_progress', 'completed', 'cancelled'))",
          "priority TEXT DEFAULT 'medium' CHECK (priority IN ('low', 'medium', 'high', 'urgent'))",
          "due_date DATE",
          "assigned_to TEXT",
          "created_at TIMESTAMPTZ DEFAULT NOW()",
          "updated_at TIMESTAMPTZ DEFAULT NOW()"
        ]
      }
    ]
  },

  "routes": [
    {
      "path": "/taskflow",
      "component": "TaskFlowDashboard",
      "description": "Dashboard de tareas"
    }
  ]
}

